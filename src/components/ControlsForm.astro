---
const { formData = {}, onInput } = Astro.props;
---

<form class="flex flex-col gap-4 w-full max-w-md">
  <input 
    class="border border-rs-neutral-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rs-primary-500 focus:border-rs-primary-500 transition-all duration-200 font-source-sans placeholder:text-rs-neutral-400 text-rs-neutral-700 hover:border-rs-neutral-400" 
    type="text" 
    name="name" 
    placeholder="Full Name" 
    value={formData.name} 
    oninput={onInput} 
    required 
  />
  <input 
    class="border border-rs-neutral-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rs-primary-500 focus:border-rs-primary-500 transition-all duration-200 font-source-sans placeholder:text-rs-neutral-400 text-rs-neutral-700 hover:border-rs-neutral-400" 
    type="text" 
    name="title" 
    placeholder="Job Title" 
    value={formData.title} 
    oninput={onInput} 
    required 
  />
  <input 
    class="border border-rs-neutral-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rs-primary-500 focus:border-rs-primary-500 transition-all duration-200 font-source-sans placeholder:text-rs-neutral-400 text-rs-neutral-700 hover:border-rs-neutral-400" 
    type="text" 
    name="phone" 
    placeholder="Phone Number" 
    value={formData.phone} 
    oninput={onInput} 
    required 
  />
  <input 
    class="border border-rs-neutral-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rs-primary-500 focus:border-rs-primary-500 transition-all duration-200 font-source-sans placeholder:text-rs-neutral-400 text-rs-neutral-700 hover:border-rs-neutral-400" 
    type="email" 
    name="email" 
    placeholder="Email Address" 
    value={formData.email} 
    oninput={onInput} 
    required 
  />
</form>