---
const { name, title, phone, email } = Astro.props;
const website = "www.romega-solutions.com";
const address = "222 Pacific Coast Hwy. #10 in El Segundo, CA 90245";
const logoUrl = "/romega-logo.svg"

---
  
<div
  id="signature-card"
  class="bg-rs-primary-200 rounded-xl shadow-lg p-6 flex flex-row flex-nowrap gap-6 items-center border border-rs-neutral-200 w-auto max-w-full min-w-[400px]"
  style="font-family: 'Source Sans 3', sans-serif;"
>
  <img
    data-field="logoUrl"
    src={logoUrl || "/romega-logo.svg"}
    alt="Romega Solutions Logo"
    class="w-24 h-24 object-contain rounded flex-shrink-0"
    style="min-width:96px"
  />
  
  <!-- Vertical Divider Line -->
  <div class="w-px h-20 bg-rs-neutral-300 flex-shrink-0"></div>
  
  <div class="flex-1 flex flex-col gap-2 min-w-0">
    <!-- Name and Title Section -->
    <div class="flex flex-col min-w-0">
      <span
        data-field="name"
        class="text-2xl font-bold text-rs-primary-700 leading-tight whitespace-nowrap overflow-hidden text-ellipsis min-w-0"
        style="font-family: 'Merriweather', serif; font-weight: 700; letter-spacing: 0.5px;"
      >
        {name}
      </span>
      <span
        data-field="title"
        class="text-lg font-semibold text-rs-accent-500 leading-tight whitespace-nowrap overflow-hidden text-ellipsis min-w-0 uppercase tracking-wide"
        style="font-family: 'Source Sans 3', sans-serif; font-weight: 600; letter-spacing: 1px;"
      >
        {title}
      </span>
    </div>
    
    <!-- Contact Information Section -->
    <div class="mt-3 flex flex-col gap-2 text-rs-primary-700 text-sm">
      <div class="flex items-center gap-2">
        <span class="inline-block align-middle text-rs-primary-500">üìû</span>
        <span class="text-rs-neutral-600 font-medium" style="font-family: 'Source Sans 3', sans-serif;">WhatsApp (PH)</span>
        <span data-field="phone" class="font-semibold text-rs-primary-600 break-words" style="font-family: 'Source Sans 3', sans-serif;">{phone}</span>
      </div>
      
      <div class="flex items-center gap-2">
        <span class="inline-block align-middle text-rs-primary-500">‚úâÔ∏è</span>
        <span data-field="email" class="text-rs-primary-600 break-words" style="font-family: 'Source Sans 3', sans-serif;">{email}</span>
      </div>
      
      <div class="flex items-center gap-2">
        <span class="inline-block align-middle text-rs-primary-500">üåê</span>
        <a
          data-field="website"
          href={website}
          class="text-rs-primary-600 underline break-all hover:text-rs-primary-700 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
          style="font-family: 'Source Sans 3', sans-serif;"
        >
          {website}
        </a>
      </div>
      
      <div class="flex items-start gap-2">
        <span class="inline-block align-middle mt-0.5 text-rs-primary-500">üìç</span>
        <div class="flex flex-col">
          <span class="text-rs-neutral-600 font-medium text-xs" style="font-family: 'Source Sans 3', sans-serif;">HQ Address (US)</span>
          <span data-field="address" class="text-rs-primary-600 break-words" style="font-family: 'Source Sans 3', sans-serif;">{address}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Ensure responsive width based on content */
  #signature-card {
    width: fit-content;
    max-width: 100%;
    min-width: 400px;
    background: linear-gradient(135deg, var(--rs-neutral-50) 0%, #f8fafc 100%);
  }
  
  /* Custom font loading */
  @import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Source+Sans+3:wght@300;400;500;600;700&display=swap');
  
  /* Ensure text doesn't wrap to second line */
  [data-field="name"], [data-field="title"] {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }
  
  /* Name styling to match image */
  [data-field="name"] {
    color: var(--rs-primary-700);
    font-family: 'Merriweather', serif;
    font-weight: 700;
    letter-spacing: 0.5px;
  }
  
  /* Title styling to match image */
  [data-field="title"] {
    color: var(--rs-accent-500);
    font-family: 'Source Sans 3', sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Contact info styling */
  .contact-info {
    font-family: 'Source Sans 3', sans-serif;
    color: var(--rs-primary-600);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    #signature-card {
      min-width: 300px;
      flex-direction: column;
      text-align: center;
      gap: 4;
    }
    
    #signature-card img {
      width: 64px;
      height: 64px;
      min-width: 64px;
    }
    
    [data-field="name"] {
      font-size: 1.5rem;
    }
    
    [data-field="title"] {
      font-size: 1rem;
    }
    
    .w-px {
      display: none;
    }
  }
  
  /* Hover effects */
  #signature-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-1px);
    transition: all 0.3s ease;
  }
</style>